# OpsGenie AI - Environment Variables Template
# Copy this file to .env.local and update with your actual values

# Application Configuration
NEXT_PUBLIC_APP_NAME="OpsGenie AI"
NEXT_PUBLIC_APP_VERSION="0.1.0"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/opsgenie_ai"
DATABASE_POOL_SIZE=10

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Authentication & Security
NEXTAUTH_SECRET="your-super-secret-jwt-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"
JWT_SECRET="your-jwt-secret-for-token-signing"
BCRYPT_ROUNDS=12

# AI/ML Services
OPENAI_API_KEY="sk-your-openai-api-key-here"
GOOGLE_GEMINI_API_KEY="your-google-gemini-api-key"
GOOGLE_AI_API_KEY="your-google-gemini-api-key"
AI_MODEL_PROVIDER="google"
AI_MODEL_NAME="gemini-1.5-flash"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@opsgenie-ai.com"

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# File Storage
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="jpg,jpeg,png,pdf,doc,docx"

# External API Keys
SLACK_BOT_TOKEN="xoxb-your-slack-bot-token"
MICROSOFT_TEAMS_WEBHOOK="https://your-teams-webhook-url"
JIRA_API_TOKEN="your-jira-api-token"
JIRA_BASE_URL="https://your-domain.atlassian.net"

# Monitoring & Analytics
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
LOG_LEVEL="info"

# Feature Flags
ENABLE_AI_ASSISTANT=true
ENABLE_TICKET_TRIAGE=true
ENABLE_ANOMALY_DETECTION=false
ENABLE_SLA_MONITORING=false
ENABLE_USER_MANAGEMENT=false
ENABLE_EXTENSIONS=false

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Session Configuration
SESSION_TIMEOUT=3600000
REMEMBER_ME_DURATION=2592000000

# Development Settings
NODE_ENV="development"
DEBUG_MODE=true
MOCK_AI_RESPONSES=false